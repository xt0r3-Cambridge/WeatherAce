<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contentWindow" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.hifiprototype.scenes.main_menu_scene.MainMenuController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Button fx:id="F1Button" contentDisplay="CENTER" prefHeight="${contentWindow.height*0.15}" prefWidth="${contentWindow.width * 0.55}" style="-fx-background-color:#DE3331" styleClass="content-box" text="Formula 1">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>

        <graphic>
            <ImageView blendMode="SCREEN" fitHeight="${contentWindow.height*0.15}" fitWidth="${contentWindow.width * 0.55}">
                <image>
                    <Image url="@images/main_menu/f1_main.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="WECButton" contentDisplay="CENTER" prefHeight="${contentWindow.height*0.15}" prefWidth="${contentWindow.width * 0.55}" style="-fx-background-color:#DE3331" styleClass="content-box" text="WEC" textFill="black">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>

        <graphic>
            <ImageView blendMode="SCREEN" fitHeight="${contentWindow.height*0.15}" fitWidth="${contentWindow.width * 0.55}">
                <image>
                    <Image url="@images/main_menu/nascar_main.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="NascarButton" contentDisplay="CENTER" prefHeight="${contentWindow.height*0.15}" prefWidth="${contentWindow.width * 0.55}" style="-fx-background-color:#DE3331" styleClass="content-box" text="NASCAR" textFill="black">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>

        <graphic>
            <ImageView blendMode="SCREEN" fitHeight="${contentWindow.height*0.15}" fitWidth="${contentWindow.width * 0.55}">
                <image>
                    <Image url="@images/main_menu/wec_main.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="LocalButton" contentDisplay="CENTER" prefHeight="${contentWindow.height*0.15}" prefWidth="${contentWindow.width * 0.55}" style="-fx-background-color:#DE3331" styleClass="content-box" text="Local Events" textFill="black">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>

        <graphic>
            <ImageView blendMode="SCREEN" fitHeight="${contentWindow.height*0.15}" fitWidth="${contentWindow.width * 0.55}">
                <image>
                    <Image url="@images/main_menu/local_main.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="FavouritesButton" contentDisplay="CENTER" prefHeight="${contentWindow.height*0.15}" prefWidth="${contentWindow.width * 0.55}" style="-fx-background-color:#A1A1A1" styleClass="content-box" text="Favourites" textFill="black">
        <font>
            <Font name="Arial Black" size="30.0" />
        </font>

        <graphic>
            <ImageView blendMode="SCREEN" fitHeight="${contentWindow.height*0.15}" fitWidth="${contentWindow.width * 0.55}">
                <image>
                    <Image url="@images/main_menu/favorites_main.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <styleClass>
        <String fx:value="transparent" />
        <String fx:value="bg-image" />
    </styleClass>
</VBox>
